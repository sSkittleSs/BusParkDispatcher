<UserControl x:Class="BusParkDispatcher.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BusParkDispatcher.Views"
             xmlns:vm="clr-namespace:BusParkDispatcher.ViewModels" xmlns:uc="clr-namespace:BusParkDispatcher.Controls"
             mc:Ignorable="d" MinHeight="370" MinWidth="796" d:DesignHeight="370" d:DesignWidth="796">
    <UserControl.DataContext>
        <vm:ReportsViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource ViewBorderStyle}"/>

        <uc:BluredTextButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource BluredTextButtonDefault}" Cursor="Arrow" Content="Мастер создания отчетов" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>

        <Grid Grid.Row="1" Grid.Column="0" Style="{StaticResource ReportGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CreateReport1}"/>
            </Grid.InputBindings>
            <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource ReportBorderStyle}"/>
            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 5"/>
            <uc:BluredTextButton Grid.Row="1" Style="{StaticResource BluredTextButtonDefault}" Cursor="Arrow" Content="Отчет 1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource ReportGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CreateReport2}"/>
            </Grid.InputBindings>
            <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource ReportBorderStyle}"/>
            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 5"/>
            <uc:BluredTextButton Grid.Row="1" Style="{StaticResource BluredTextButtonDefault}" Cursor="Arrow" Content="Отчет 2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2" Style="{StaticResource ReportGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CreateReport3}"/>
            </Grid.InputBindings>
            <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource ReportBorderStyle}"/>
            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 5"/>
            <uc:BluredTextButton Grid.Row="1" Style="{StaticResource BluredTextButtonDefault}" Cursor="Arrow" Content="Отчет 3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Style="{StaticResource ReportGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CreateReport4}"/>
            </Grid.InputBindings>
            <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource ReportBorderStyle}"/>
            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 5"/>
            <uc:BluredTextButton Grid.Row="1" Style="{StaticResource BluredTextButtonDefault}" Cursor="Arrow" Content="Отчет 4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </Grid>
    </Grid>
</UserControl>
