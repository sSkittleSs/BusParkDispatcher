    </Style>

    <Style TargetType="uc:CornerTextBox" BasedOn="{StaticResource CornerTextBoxDefault}"/>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource PasswordBoxDefault}"/>
</ResourceDictionary>